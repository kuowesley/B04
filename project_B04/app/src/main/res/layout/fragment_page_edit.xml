<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".page_edit">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <EditText
            android:id="@+id/etFoodName"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:background="@drawable/name"
            android:ems="10"
            android:gravity="center"
            android:hint="請輸入欲修改之暱稱"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etHeight"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:background="@drawable/height"
            android:ems="10"
            android:gravity="center"
            android:hint="請輸入欲修改之身高"
            android:inputType="number" />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:background="@drawable/weight"
            android:ems="10"
            android:gravity="center"
            android:hint="請輸入欲修改之體重"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/page_edit_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/day_edit_cancel_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/day_edit_ok_btn"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>