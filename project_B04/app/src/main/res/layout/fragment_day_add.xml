<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/day_add"
    tools:context=".day_add">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingBtnCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:src="@drawable/pic"
        app:background="@drawable/avatar"
        app:backgroundTint="#B2855B"
        app:elevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="40dp"
        app:rippleColor="#88613C" />

    <Button
        android:id="@+id/btnCancelDayAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/day_add_cancel_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddNew"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/day_add_ok_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginLeft="67dp"
            android:background="@drawable/hint_day_add"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etFoodName"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:background="@drawable/name_food"
                android:ems="10"
                android:gravity="center"
                android:hint="請輸入食物名稱"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnPreview"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/preview"
                android:paddingTop="4.5dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout8"
        app:layout_constraintStart_toStartOf="@+id/linearLayout8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27">

        <TextView
            android:id="@+id/tvTypeNum"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/type__food"
            android:paddingLeft="62dp"
            android:paddingTop="13dp"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOneAmountNum"
                android:layout_width="133dp"
                android:layout_height="55dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/one_amount_food"
                android:gravity="center"
                android:paddingLeft="55dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/amount_food"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:paddingLeft="50dp"
                android:text="1"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout9"
        app:layout_constraintStart_toStartOf="@+id/linearLayout9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77">

        <TextView
            android:id="@+id/tvProteinNum"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/protein_food"
            android:paddingLeft="125dp"
            android:paddingTop="14dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSugarNum"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sugar_food"
            android:paddingLeft="125dp"
            android:paddingTop="14dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSodiumNum"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sodium_food"
            android:paddingLeft="125dp"
            android:paddingTop="14dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCaloriesNum"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/calories_food"
            android:paddingLeft="125dp"
            android:paddingTop="14dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvFatNum"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/fat_food"
            android:paddingLeft="125dp"
            android:paddingTop="14dp"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>