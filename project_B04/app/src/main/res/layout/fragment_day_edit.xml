<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/day_edit"
    tools:context=".day_edit">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTypeNum"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/type__food"
                android:gravity="center"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOneAmountNum"
                    android:layout_width="133dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/one_amount_food"
                    android:gravity="center"
                    android:paddingLeft="55dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/amount_food"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:paddingLeft="50dp"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77">

        <TextView
            android:id="@+id/tvProtein"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/protein_food"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSugar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/sugar_food"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvFat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/fat_food"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSodium"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/sodium_food"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/calories_food"
            android:gravity="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/etFoodName"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/name_food"
        android:ems="10"
        android:gravity="center"
        android:hint="輸入欲修改食物名"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnEditNum_OK"
        android:layout_width="200dp"
        android:layout_height="73dp"
        android:background="@drawable/day_edit_ok_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCancel_dayEdit"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/day_edit_cancel_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>